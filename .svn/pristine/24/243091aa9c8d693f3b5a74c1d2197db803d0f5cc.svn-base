<!DOCTYPE html>
<html>
    @model Proxy.ServiceWinToolRead.T_DTU_Device_Ex
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>重要设备详细</title>
        <link href="~/Scripts/JqEasyUI/themes/default/easyui.css" rel="stylesheet" />
        <link href="~/Style/Site.css" rel="stylesheet" />
        <link href="~/Style/common.css" rel="stylesheet" />
        <link href="~/Style/ui-com-table.css" rel="stylesheet" />
        <link href="~/Scripts/JqEasyUI/themes/icon.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.7.1.min.js"></script>
        <script src="~/Scripts/Common/GlobalLoading.js"></script>
        <script src="~/Scripts/JqEasyUI/jquery.easyui.min.js"></script>
        <script src="~/Scripts/JqEasyUI/easyloader.js"></script>
        <script src="~/Scripts/Common/Common.js"></script>
        <script src="~/Scripts/Common/ui_common.js"></script>
        <script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
        <script src="~/Scripts/SiteMng/VipDevice.js"></script>
        <script>
            $(function () {
                VipDevice.LoadCompanys();             

                var oper = "@ViewBag.Oper";
                if (oper != null && oper != "null" && oper.length > 0) {

                    //详细
                    if (oper == "Show" || oper == "Edit") {
                        setTimeout(function () {
                            for (var i = 0; i < $("#Company option").length ; i++) {
                                if ("@Model.CompanyId" == $("#Company option")[i].value) {
                                    $("#Company option")[i].selected = true;
                                    break;
                                }
                            }
                        }, 100);

                        setTimeout(function () {
                            VipDevice.GetDTUList();
                            for (var i = 0; i < $("#SiteName option").length ; i++) {
                                if ("@Model.Dtuid" == $("#SiteName option")[i].value) {
                                    $("#SiteName option")[i].selected = true;
                                    break;
                                }
                            }
                        }, 100);
                    }
                    if (oper == "Show") {
                        setTimeout(VipDevice.GetDTUList, 100);
                        $(".oper").attr("disabled", "disabled");
                    }
                    //添加
                    if (oper == "Add") {
                        setTimeout(VipDevice.GetDTUList, 100);
                        $("input[type=text]").val("");
                    }
                }
                $("#OperArea").html(@Html.Raw(ViewBag.Button));
            });
        </script>
        <style type="text/css">
            table td
            {
                padding-left: 10px;
            }
        </style>
    </head>
    <body>
        <div>
            <table class="ui-com-tabFrm">
                <tr>
                    <td>所属公司</td>
                    <td colspan="3">
                        <select id="ddlCompany" class="oper" style="width:443px;border: thin solid #2DAAE2;border-radius: 3px;" onchange="VipDevice.GetDTUList();"></select>
                    </td>
                </tr>
                <tr>
                    <td>设备名称</td>
                    <td>
                        <input id="txtDeviceName" type="text" style="width:179px;" class="oper" value="@Model.DeviceName" name="@Model.Id" />
                    </td>
                    <td>站点名称</td>
                    <td>
                        <select id="ddlSite" class="oper" style="width:179px;border: thin solid #2DAAE2;border-radius: 3px;">
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>设备品牌</td>
                    <td>
                        <input id="txtBrand" type="text" style="width:179px;" class="oper" value="@Model.DeviceBrand" />
                    </td>
                    <td>规格型号</td>
                    <td>
                        <input id="txtModelCode" style="width:177px;" class="oper" type="text" value="@Model.ModelCode" />
                    </td>
                </tr>
                <tr>
                    <td>设备编号</td>
                    <td>
                        <input id="txtDeviceSN" type="text" style="width:179px;" class="oper" value="@Model.DeviceSN" />
                    </td>
                    <td>出厂日期</td>
                    <td>
                        <input id="txtDate" type="text" style="width:177px;" class="oper" value="@Model.Date" onfocus="Common.SetDateCtrl()" />
                    </td>
                </tr>
                <tr>
                    <td>技术参数</td>
                    <td colspan="3" style="padding-top:3px;">
                        <textarea id="txtParams" class="oper" style="width:436px;height:100px;border: thin solid #2DAAE2;border-radius: 3px;">@Model.DeviceParams</textarea>
                    </td>
                </tr>
                <tr>
                    <td>备注</td>
                    <td colspan="3">
                        <textarea id="txtDesc" class="oper" style="width:436px;height:100px;border: thin solid #2DAAE2;border-radius: 3px;">@Model.Memo</textarea>
                    </td>
                </tr>
                <tr>
                   <td colspan="4" class="com_TextCenter" id="OperArea">
                   </td>
               </tr>
            </table>
        </div>
    </body>
</html>
