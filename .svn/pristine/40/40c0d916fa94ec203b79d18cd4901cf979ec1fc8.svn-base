<!DOCTYPE html>
<html>
    @model Proxy.ServiceWinToolRead.T_DTU_ValveEffectEx
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>阀门影响详细</title>
        <link href="~/Scripts/JqEasyUI/themes/default/easyui.css" rel="stylesheet" />
        <link href="~/Style/Site.css" rel="stylesheet" />
        <link href="~/Style/common.css" rel="stylesheet" />
        <link href="~/Style/Stip.css" rel="stylesheet" />
        <script src="~/Scripts/Stip.js"></script>
        <link href="~/Style/ui-com-table.css" rel="stylesheet" />
        <link href="~/Scripts/JqEasyUI/themes/icon.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.7.1.min.js"></script>
        <script src="~/Scripts/Common/GlobalLoading.js"></script>
        <script src="~/Scripts/JqEasyUI/jquery.easyui.min.js"></script>
        <script src="~/Scripts/JqEasyUI/easyloader.js"></script>
        <script src="~/Scripts/Common/Common.js"></script>
        <script src="~/Scripts/Common/ui_common.js"></script>
        <script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
        <script src="~/Scripts/SiteMng/ValueEffect.js"></script>
        <script src="~/Scripts/Common/Validate.js"></script>
        <script>
            $(function () {
                //获取公司信息
                ValueEffect.LoadCompanys();

                var oper = "@ViewBag.Oper";
                if (oper != null && oper != "null" && oper.length > 0) {
                    //详细
                    if (oper == "Show" || oper == "Edit") {
                        for (var i = 0; i < $("#ddlCompany option").length ; i++) {
                            if ("@Model.CompanyId" == $("#ddlCompany option")[i].value) {
                                $("#ddlCompany option")[i].selected = true;
                                break;
                            }
                        }
                        ValueEffect.GetGroupsByComId("@Model.CompanyId");
                        for (var i = 0; i < $("#ddlGroup option").length ; i++) {
                            if ("@Model.GroupCode" == $("#ddlGroup option")[i].value) {
                                $("#ddlGroup option")[i].selected = true;
                                break;
                            }
                        }
                        ValueEffect.GetDTUByGroupCode();
                        for (var i = 0; i < $("#ddlSite option").length ; i++) {
                            if ("@Model.Dtuid" == $("#ddlSite option")[i].value) {
                                $("#ddlSite option")[i].selected = true;
                                break;
                            }
                        }
                    }
                    if (oper == "Show") {
                        $(".oper").attr("disabled", "disabled");
                    }
                    if (oper == "Edit") {
                        $("select").attr("disabled", "disabled");
                    }
                    //添加
                    if (oper == "Add") {
                        $("input[type=text]").val("");
                    }
                }
                $("#OperArea").html(@Html.Raw(ViewBag.Button));
            });
        </script>
        <style type="text/css">
            table td
            {
                padding-left: 10px;
            }
            .required
            {
                color:red;
            }
        </style>
    </head>
    <body>
        <div>
            <table class="ui-com-tabFrm">
                <tr>
                    <td>所属公司</td>
                    <td>
                        <select id="ddlCompany" class="oper" style="width:161px;border: thin solid #2DAAE2;border-radius: 3px;" onchange="ValueEffect.GetGroupsByComId(this.value);"></select>
                    </td>
                    <td>站点分组</td>
                    <td>
                        <select id="ddlGroup" class="oper" style="width:130px;border: thin solid #2DAAE2;border-radius: 3px;" onchange="ValueEffect.GetDTUByGroupCode();"></select>
                    </td>
                    <td>站点名称</td>
                    <td>
                        <select id="ddlSite" class="oper" style="width:120px;border: thin solid #2DAAE2;border-radius: 3px;"></select>
                    </td>
                </tr>
                <tr>
                    <td>阀门名称</td>
                    <td>
                        <input id="txtValveName" style="width:159px;" class="oper" type="text" value="@Model.ValveName" name="@Model.ValveCode" />
                        <span class="required">*</span>
                    </td>
                    <td>关阀时间</td>
                    <td colspan="3">
                        <input id="txtDate" type="text" style="width:128px;" class="oper" value="@Model.ClosedTime" onfocus="Common.SetDateCtrl()" />
                    </td>
                </tr>
                <tr>                
                    <td>影响区域</td>
                    <td>
                        <input id="txtEffctArea" type="text" style="width:159px;" class="oper" value="@Model.EffctArea" />
                    </td>
                    <td>影响户数</td>
                    <td colspan="3">
                        <input id="txtEffctUserNum" type="text" style="width:128px;" class="oper" value="@Model.EffctUserNum" />
                    </td>
                </tr>
                <tr>
                   <td colspan="6" class="com_TextCenter" id="OperArea"></td>
               </tr>
            </table>
        </div>
    </body>
</html>
