var Group = {
    flag: true,
    //加载公司列表
    LoadCompanys: function () {
        $.ajax({
            type: "post",
            url: "/Company/GetComany",
            dataType: "json",
            error: function () {
                Common.MsgBox("获取公司信息失败,请稍后再试");
            },
            success: function (data) {
                var str = "";
                for (var i = 0; i < data.length; i++) {
                    str += "<option value=" + data[i].CompanyID + ">" + data[i].CompanyName + "</option>";
                }
                $("#ddlCompany").append(str);
            }
        });
    },
    //查询用户分组
    SearchUserGroup: function () {
        var companyId = $("#ddlCompany").val();
        $.ajax({
            type: "post",
            url: "/UserGroup/GetUserGroupByCompanyID",
            data: { companyId: companyId },
            dataType: "text",
            error: function () {
                Common.MsgBox("查询分组信息失败,请稍后再试");
            },
            success: function (data) {
                $("#GroupList tbody").html(data);
            }
        });
    },
    //树形展开
    Collapse: function (obj) {
        if ($(obj).attr("src") == "/Images/tag_plus.png") {
            $(obj).attr("src", "/Images/tag_add.png");
        }
        else {
            $(obj).attr("src", "/Images/tag_plus.png");
        }

        var pCode = $(obj).attr("isHide");
        var nextTR = $(obj).parents('tr').next();
        var cCode = nextTR.attr("isHide");
        var childCode = "aaa", imgobj = null;
        while (pCode == cCode || childCode == cCode) {
            imgobj = nextTR.children(":first").children("img");
            if (imgobj.length > 0 && imgobj.attr("src") == "/Images/tag_plus.png") {
                childCode = imgobj.attr("isHide");
            }
            if (nextTR.is(":visible")) {
                nextTR.hide();
            }
            else {
                nextTR.show();
            }
            nextTR = nextTR.next();
            cCode = nextTR.attr("isHide");
        }
    },
    //获取分组
    GetGroup: function () {
        var companyId = $("#ddlCompany").val();
        $.ajax({
            type: "post",
            url: "/UserGroup/GetGroup",
            data: { companyId: companyId },
            dataType: "json",
            error: function () {
                Common.MsgBox("获取分组信息失败,请稍后再试");
            },
            success: function (data) {
                var str = "";
                for (var i = 0; i < data.length; i++) {
                    str += "<option value=" + data[i].GroupCode + ">" + data[i].GroupName + "</option>";
                }
                $("#ddlParentGroup").html(str);
            }
        });
    },
    //添加用户
    AddGroup: function () {
        var model = Group.GetData();
        Group.CheckData();
        if (Group.flag) {
            $.ajax({
                type: "post",
                url: "/UserGroup/Add",
                data: model,
                dataType: "text",
                error: function () {
                    Common.MsgBox("添加分组信息失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "true") {
                        Common.layoutTopClose();
                        $("#framecenter iframe", parent.document).contents().find("#btnQuery").trigger("click");
                    }
                    else {
                        alert("添加失败");
                    }
                }
            });
        }
    },
    //修改用户分组
    UpdateGroup: function () {
        var model = Group.GetData();
        Group.CheckData();
        if (Group.flag) {
            $.ajax({
                type: "post",
                url: "/UserGroup/Update",
                data: model,
                dataType: "text",
                error: function () {
                    Common.MsgBox("修改分组失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "true") {
                        Common.layoutTopClose();
                        $("#framecenter iframe", parent.document).contents().find("#btnQuery").trigger("click");
                    }
                    else {
                        alert("添加失败");
                    }
                }
            });
        }
    },
    //删除分组
    DeleteGroup: function (groupCode) {
        if (confirm("确定要删除吗?")) {
            $.ajax({
                type: "post",
                url: "/UserGroup/Delete",
                data: { groupCode: groupCode },
                dataType: "text",
                error: function () {
                    Common.MsgBox("删除分组信息失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "true") {
                        alert("删除成功");
                        $("#framecenter iframe", parent.document).contents().find("#btnQuery").trigger("click");
                    }
                    else {
                        alert("删除失败!");
                    }
                }
            });
        }
    },
    //获取数据
    GetData: function () {
        var model = {
            GroupCode: $("#txtGroupName").attr("name"),
            GroupName: $("#txtGroupName").val().trim(),
            GroupDesc: $("#txtGroupDesc").val().trim(),
            ParentCode: $("#ddlParentGroup").val(),
            CompanyId: $("#ddlCompany").val()
        };
        return model;
    },
    //数据验证
    CheckData: function () {
        Group.flag = true;
        if (!Validate.IsRequired($("#txtGroupName").val())) {
            Group.flag = false;
            Stip("txtGroupName").show({ content: "不能为空", kind: "error", time: 3000 });
            $("#txtGroupName").focus();
            return;
        }
    }
};