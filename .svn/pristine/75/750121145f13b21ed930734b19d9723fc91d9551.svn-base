var Malodor = {
    flag: true,
    //获取站点配置列表
    GetSiteSetList: function () {
        var configName = $("#txtConfigName").val().trim();
        $.ajax({
            type: "post",
            url: "/SiteSetMalodor/GetSiteSetList",
            data: { configName: configName },
            dataType: "json",
            error: function () {
                Common.MsgBox("查询配置信息失败,请稍后再试");
            },
            success: function (data) {
                var html = "";
                for (var i = 0; i < data.length; i++) {
                    html += "<tr>";
                    html += "<td class='com_TextCenter com_w25pen'>" + data[i].ConfigName + "</td>";
                    html += "<td class='com_TextCenter com_w25pen com_disnote'>" + data[i].ConfigDesc + "</td>";
                    html += "<td class='com_TextCenter com_w10pen'>" + data[i].FlowNum + "</td>";
                    html += "<td class='com_TextCenter com_w10pen'>" + data[i].AINum + "</td>";
                    html += "<td class='com_TextCenter com_w10pen'>" + data[i].DINum + "</td>";
                    html += "<td class='com_TextCenter com_w20pen'>";
                    html += "<a href='javascript:void(0)' onclick=Common.WinTopBox('配置查看','38%','44%','25%','35%','SiteSetMalodor/ShowDetail?oper=Show&configId=" + data[i].ConfigCode + "')>查看|</a> ";
                    html += "<a href='javascript:void(0)' onclick=Common.WinTopBox('配置修改','38%','44%','25%','35%','SiteSetMalodor/ShowDetail?oper=Edit&configId=" + data[i].ConfigCode + "')>修改|</a> ";
                    html += "<a href='javascript:void(0)' onclick=Malodor.Delete('" + data[i].ConfigCode + "')>删除</a> ";
                    html += "</td>";
                    html += "</tr>";
                }
                $("#ConfigList tbody").html(html);
            }
        });
    },
    //下拉改变
    PanelChanged: function () {
        var html = "";
        var sum = $("#ddlPanel").val();
        for (var i = 1; i <= sum; i++) {
            html += "<label style='margin-left:5px'>面板" + i + "加注头数</label>";
            html += "<input id='txtPanelDesc" + i + "' style='width:25px;margin-left:3px;' type='text' class='oper' />";
            html += "<span class='required'>*</span>";
        }
        $("#div_option").html(html);
    },
    //新增
    Add: function () {
        var model = Malodor.GetData();
        Malodor.CheckData();
        if (Malodor.flag) {
            $.ajax({
                type: "post",
                url: "/SiteSetMalodor/Add",
                data: model,
                dataType: "text",
                error: function () {
                    Common.MsgBox("添加配置信息失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "true") {
                        Common.layoutTopClose();
                        $("#framecenter iframe", parent.document).contents().find("#btnQuery").trigger("click");
                    }
                    else {
                        alert("添加失败");
                    }
                }
            });
        }
    },
    //更改配置
    Update: function () {
        var model = Malodor.GetData();
        Malodor.CheckData();
        if (Malodor.flag) {
            $.ajax({
                type: "post",
                url: "/SiteSetMalodor/Update",
                data: model,
                dataType: "text",
                error: function () {
                    Common.MsgBox("修改配置信息失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "true") {
                        Common.layoutTopClose();
                        $("#framecenter iframe", parent.document).contents().find("#btnQuery").trigger("click");
                    }
                    else {
                        alert("修改失败");
                    }
                }
            });
        }
    },
    //删除配置
    Delete: function (configCode) {
        if (confirm("确定要删除吗?")) {
            $.ajax({
                type: "post",
                url: "/SiteSetMalodor/Delete",
                data: { configCode: configCode },
                dataType: "text",
                error: function () {
                    Common.MsgBox("删除配置信息失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "true") {
                        Common.layoutTopClose();
                        $("#framecenter iframe", parent.document).contents().find("#btnQuery").trigger("click");
                    }
                    else {
                        alert("删除失败");
                    }
                }
            });
        }
    },
    //获取数据
    GetData: function () {
        var str = '{';
        for (var i = 1; i <= $("#div_option input").length; i++) {
            if (i !== $("#div_option input").length) {
                str += '"' + i + '"' + ':' + $("#txtPanelDesc" + i).val() + ',';
            }
            else {
                str += '"' + i + '"' + ':' + $("#txtPanelDesc" + i).val();
            }
        }
        str += '}';
        var model = {
            ConfigCode: $("#txtConfigName").attr("name"),
            ConfigName: $("#txtConfigName").val().trim(),
            ConfigDesc: $("#txtDesc").val().trim(),
            FlowNum: $("#txtFlowNum").val().trim(),
            AINum: $("#txtAINum").val().trim(),
            DINum: $("#txtDINum").val().trim(),
            IsAlert: $("input[type=radio][name=IsAlert]:checked").val(),
            IsCreate: $("input[type=radio][name=IsCreate]:checked").val(),
            BoardInfo: str
        };
        return model;
    },
    //数据验证
    CheckData: function () {
        Malodor.flag = true;
        if (!Validate.IsRequired($("#txtConfigName").val())) {
            Malodor.flag = false;
            Stip("txtConfigName").show({ content: "不能为空", kind: "error", time: 3000 });
            $("#txtConfigName").focus();
            return;
        }
        if (!Validate.IsRequired($("#txtFlowNum").val())) {
            Malodor.flag = false;
            Stip("txtFlowNum").show({ content: "不能为空", kind: "error", time: 3000 });
            $("#txtFlowNum").focus();
            return;
        }
        if (!Validate.IsInt($("#txtFlowNum").val())) {
            Malodor.flag = false;
            Stip("txtFlowNum").show({ content: "输入整数", kind: "error", time: 3000 });
            $("#txtFlowNum").focus();
            return;
        }
        if (!Validate.IsRequired($("#txtAINum").val())) {
            Malodor.flag = false;
            Stip("txtAINum").show({ content: "不能为空", kind: "error", time: 3000 });
            $("#txtAINum").focus();
            return;
        }
        if (!Validate.IsInt($("#txtAINum").val())) {
            Malodor.flag = false;
            Stip("txtAINum").show({ content: "输入整数", kind: "error", time: 3000 });
            $("#txtAINum").focus();
            return;
        }
        if (!Validate.IsRequired($("#txtDINum").val())) {
            Malodor.flag = false;
            Stip("txtDINum").show({ content: "不能为空", kind: "error", time: 3000 });
            $("#txtDINum").focus();
            return;
        }
        if (!Validate.IsInt($("#txtDINum").val())) {
            Malodor.flag = false;
            Stip("txtDINum").show({ content: "输入整数", kind: "error", time: 3000 });
            $("#txtDINum").focus();
            return;
        }
        for (var i = 1; i <= $("#div_option input").length ; i++) {
            if (!Validate.IsRequired($("#txtPanelDesc" + i).val())) {
                Malodor.flag = false;
                Stip("txtPanelDesc" + i).show({ content: "不能为空", kind: "error", time: 3000 });
                $("#txtPanelDesc" + i).focus();
                return;
            }
            if (!Validate.IsInt($("#txtPanelDesc" + i).val())) {
                Malodor.flag = false;
                Stip("txtPanelDesc" + i).show({ content: "输入整数", kind: "error", time: 3000 });
                $("#txtPanelDesc" + i).focus();
                return;
            }
        }
    }
};