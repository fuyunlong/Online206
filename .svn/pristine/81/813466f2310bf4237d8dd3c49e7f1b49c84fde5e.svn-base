var UserRole = {
    //查询用户角色
    SearchUserRole: function () {
        var roleName = $("#txtRoleName").val().trim();
        $.ajax({
            type: "post",
            url: "/UserRole/GetListByName",
            data: "roleName=" + roleName,
            dataType: "json",
            error: function () {
                Common.MsgBox("查询角色失败,请稍后再试");
            },
            success: function (data) {
                var Str = "";
                for (var i = 0; i < data.length; i++) {
                    Str += "<tr><td class='com_w20pen'><input type='hidden' />" + data[i].RoleCode + "</td>";
                    Str += "<td class='com_w30pen'>" + data[i].RoleName + "</td>";
                    Str += "<td class='com_w30pen'>" + data[i].RoleDesc + "</td>";
                    Str += "<td class='com_w20pen'>";
                    Str += "<a href='javascript:void(0)' onclick=Common.WinTopBox('角色查看','50%','40%','20%','30%','UserRole/RoleDetail?Oper=Show&RoleCode=" + data[i].RoleCode + "')>查看|</a>";
                    Str += "<a href='javascript:void(0)' onclick=Common.WinTopBox('角色修改','50%','40%','20%','30%','UserRole/RoleDetail?Oper=Edit&RoleCode=" + data[i].RoleCode + "')>修改|</a>";
                    Str += "<a href='javascript:void(0)' onclick=UserRole.DeleteUserRole('" + data[i].RoleCode + "')>删除</a>";
                    Str += "</tr>";
                }

                $("#UserRoleList tbody").html(Str);
            }
        });
    },
    //添加角色
    AddUserRole: function () {
        var roleobj = UserRole.GetRoleObj();
        if (roleobj != null) {
            $.ajax({
                type: "post",
                url: "/UserRole/AddUserRole",
                data: roleobj,
                dataType: "text",
                error: function () {
                    Common.MsgBox("查询角色失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "1") {
                        alert("添加成功");
                    }
                    else if (data == "3") {
                        alert("当前角色编号已存在");
                    }
                    else {
                        alert("添加失败");
                    }
                }
            });
        }
    },
    //修改角色
    UpdateUserRole: function () {
        var roleobj = UserRole.GetRoleObj();
        if (roleobj != null) {
            $.ajax({
                type: "post",
                url: "/UserRole/UpdateUserRole",
                data: roleobj,
                dataType: "text",
                error: function () {
                    Common.MsgBox("请求失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "1") {
                        alert("修改成功");
                    }
                    else {
                        alert("修改失败");
                    }
                }
            });
        }
    },
    //删除角色
    DeleteUserRole: function (RoleCode) {
        if (confirm("确定要删除该角色？")) {
            $.ajax({
                type: "post",
                url: "/UserRole/DeleteUserRole",
                data: { RoleCode: RoleCode },
                dataType: "text",
                error: function () {
                    Common.MsgBox("请求失败,请稍后再试");
                },
                success: function (data) {
                    if (data == "1") {
                        alert("删除成功");
                    }
                    else {
                        alert("删除失败");
                    }
                }
            });
        }
    },
    GetRoleObj: function () {
        if (!Validate.IsRequired($("#RoleCode").val())) {
            alert("角色编码不能为空");
            return null;
        }
        if (!Validate.IsRequired($("#RoleName").val())) {
            alert("角色名称不能为空");
            return null;
        }
        if (!Validate.IsRequired($("#RoleDesc").val())) {
            alert("角色描述不能为空");
            return null;
        }
        var RoleObj = {
            RoleCode: $("#RoleCode").val(),
            RoleName: $("#RoleName").val(),
            RoleDesc: $("#RoleDesc").val()
        };
        return RoleObj;
    }
};