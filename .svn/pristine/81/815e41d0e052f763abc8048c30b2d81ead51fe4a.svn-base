var Group = {
    //查询用户分组
    SearchUserGroup: function () {
        var companyId = $("#ddlCompany").val();
        $.ajax({
            type: "post",
            url: "/UserGroup/GetUserGroupByCompanyID",
            data: "companyId=" + companyId,
            dataType: "json",
            error: function () {
                Common.MsgBox("查询分组失败,请稍后再试");
            },
            success: function (data) {
                var str = "";
                for (var i = 0; i < data.length; i++) {
                    str += "<tr><td class='com_w25pen'><input type='hidden' value=" + data[i].Group.GroupCode + ">" + data[i].Group.GroupName + "</td>";
                    str += "<td class='com_w30pen'>" + data[i].Group.GroupDesc + "</td>";
                    str += "<td class='com_w25pen'>" + data[i].ParentName + "</td>";
                    str += "<td class='com_w20pen'>";
                    str += "<a href='javascript:void(0)' onclick=Common.WindowBox('分组查看',0.8,0.8,'UserGroup/Operation/Show/" + data[i].Group.GroupCode + "')>查看|</a>";
                    str += "<a href='javascript:void(0)' onclick=Common.WindowBox('分组修改',0.8,0.8,'UserGroup/Operation/Edit/" + data[i].Group.GroupCode + "')>修改|</a>";
                    str += "<a href='javascript:void(0)' onclick=Config.DeleteConfig(" + data[i].Group.GroupCode + ")>删除</a>";
                    str += "</tr>";
                }
                $("#GroupList tbody").html(str);
            }
        });
    },
    //加载公司列表
    LoadCompanys: function () {
        var str = "";
        $.ajax({
            type: "post",
            url: "/Company/GetComany",
            dataType: "json",
            error: function () {
                Common.MsgBox("查询公司失败,请稍后再试");
            },
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    str += "<option value=" + data[i].CompanyID + ">" + data[i].CompanyName + "</option>";
                }
                $("#ddlCompany").append(str);
            }
        });
    }
};