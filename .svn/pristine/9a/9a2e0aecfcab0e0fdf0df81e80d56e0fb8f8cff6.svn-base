var ValueEffect = {
    //加载公司列表
    LoadCompanys: function () {
        $.ajax({
            type: "post",
            url: "/Company/GetComany",
            dataType: "json",
            async: false,
            error: function () {
                Common.MsgBox("查询公司失败,请稍后再试");
            },
            success: function (data) {
                var str = "";

                for (var i = 0; i < data.length; i++) {
                    str += "<option value=" + data[i].CompanyID + ">" + data[i].CompanyName + "</option>";
                }
                $("#ddlCompany").append(str);
                ValueEffect.GetGroupsByComId($("#ddlCompany").val());
            }
        });
    },
    //加载分组
    GetGroupsByComId: function (compId) {
        $.ajax({
            type: "post",
            data: { id: compId },
            url: "/SiteGroup/GetGroup",
            dataType: "json",
            async: false,
            error: function (ex) {
                Common.MsgBox("查询分组失败,请稍后再试" + ex.responseText);
            },
            success: function (data) {
                var str = "";
                for (var i = 0; i < data.length; i++) {
                    str += '<option value="' + data[i].GroupCode + '">' + data[i].GroupName + '</option>';
                }
                $("#ddlGroup").html(str);
                $("#ddlSite").html("");
            }
        });
    },
    //根据分组编码查询站点
    GetDTUByGroupCode: function (code) {
        $.ajax({
            type: "post",
            url: "/UserInfo/GetDTUByGroupCode",
            data: { groupCode: code },
            dataType: "json",
            async: false,
            error: function (ex) {
                Common.MsgBox("查询站点失败,请稍后再试" + ex.responseText);
            },
            success: function (data) {
                var str = "";
                for (var i = 0; i < data.length; i++) {
                    str += '<option value="' + data[i].Dtuid + '">' + data[i].DtuidName + '</option>';
                }
                $("#ddlSite").html(str);
            }
        });
    },
    //查询列表
    GetValueEffectList: function () {
        var dtuId = $("#ddlSite").val();
        $.ajax({
            type: "post",
            url: "/ValveInfluence/GetInfluencList",
            data: { dtuId: dtuId },
            dataType: "json",
            error: function (ex) {
                Common.MsgBox("查询阀门影响失败,请稍后再试" + ex.responseText);
            },
            success: function (data) {
                var str = "";
                for (var i = 0; i < data.length; i++) {
                    str += "<tr>";
                    str += "<td class='com_TextCenter com_w20pen'>" + data[i].ValveName + "</td>";
                    str += "<td class='com_TextCenter com_w20pen'>" + ValueEffect.ChangeDateFormat(data[i].ClosedTime) + "</td>";
                    str += "<td class='com_TextCenter com_w20pen'>" + data[i].EffctArea + "</td>";
                    str += "<td class='com_TextCenter com_w20pen'>" + data[i].EffctUserNum + "</td>";
                    str += "<td class='com_TextCenter com_w20pen'>";
                    str += "<a href='javascript:void(0)' onclick=Common.WinTopBox('配置查看','38%','38%','25%','35%','SiteSet/ShowDetail?oper=Show&configId=" + data[i].ValveCode + "')>查看|</a> ";
                    str += "<a href='javascript:void(0)' onclick=Common.WinTopBox('配置修改','38%','38%','25%','35%','SiteSet/ShowDetail?oper=Edit&configId=" + data[i].ValveCode + "')>修改|</a> ";
                    str += "<a href='javascript:void(0)' onclick=SiteSet.Delete('" + data[i].ValveCode + "')>删除</a> ";
                    str += "</td>";
                    str += "</tr>";
                }
                $("#EffectList tbody").html(str);
            }
        });
    },
    //日期格式转换
    ChangeDateFormat: function (date) {
        date = date.replace("/Date(", "").replace(")/", "");
        if (date.indexOf("+") > 0) {
            date = date.substring(0, date.indexOf("+"));
        }
        else if (date.indexOf("-") > 0) {
            date = date.substring(0, date.indexOf("-"));
        }

        var date = new Date(parseInt(date, 10));
        var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
        var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
        return date.getFullYear() + "-" + month + "-" + currentDate;
    }
};