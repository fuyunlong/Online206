<!DOCTYPE html>
<html>
    @model WinfoToolSys.Models.T_ConfigExt
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>公司配置信息</title>
        <link href="~/Scripts/JqEasyUI/themes/default/easyui.css" rel="stylesheet" />
        <link href="~/Style/Site.css" rel="stylesheet" />
        <link href="~/Style/common.css" rel="stylesheet" />
        <link href="~/Style/ui-com-table.css" rel="stylesheet" />
        <link href="~/Scripts/JqEasyUI/themes/icon.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.7.1.min.js"></script>
        <script src="~/Scripts/Common/GlobalLoading.js"></script>
        <script src="~/Scripts/JqEasyUI/jquery.easyui.min.js"></script>
        <script src="~/Scripts/JqEasyUI/easyloader.js"></script>
        <script src="~/Scripts/Common/Common.js"></script>
        <script src="~/Scripts/Config/Config.js"></script>
        <script src="~/Scripts/Common/ui_common.js"></script>
        <script>
            $(function () {
                Config.GetClienType();
                var Oper = "@Model.Oper";
                if (Oper != null && Oper != "null" && Oper.length > 0) {
                    setTimeout(function () {
                        for (var i = 0; i < $("#ddlClienType option").length ; i++) {
                            if ("@Model.ConfigInfo.ClientType" == $("#ddlClienType option")[i].value) {
                                $("#ddlClienType option")[i].selected = true;
                                break;
                            }
                        }
                    }, 50);
                    
                    //详细
                    if (Oper == "Show") {
                        $(".oper").attr("disabled", "disabled");
                    }
                    //修改
                    if (Oper == "Edit") {
                        
                    }
                    //添加
                    if (Oper == "Add") {
                        $("input[type=text]").val("");
                    }
                }
                $('#OperArea').html(@Html.Raw(ViewBag.Oper));
            });
        </script>
    </head>
    <body>
        <div>
            <table class="ui-com-tabFrm">
                <tr>
                    <td>配置名称</td>
                    <td colspan="3">
                        <input type="text" class="com_w98pen oper" id="txtConfigName" value="@Model.ConfigInfo.ConfigName" name="@Model.ConfigInfo.ConfigId" />
                    </td>
                </tr>
                <tr>
                    <td>配置描述</td>
                    <td colspan="3">
                        <input type="text" class="com_w98pen oper" id="txtDesc" value="@Model.ConfigInfo.ConfigDesc" />
                    </td>
                </tr>
                <tr>
                    <td>IP地址</td>
                    <td>
                        <input type="text" id="txtIP"  class="oper" value="@Model.ConfigInfo.IP"/>
                    </td>
                    <td>端口号（Port）</td>
                    <td>
                        <input type="text" id="txtPort" class="oper" value="@Model.ConfigInfo.Port">
                    </td>
                </tr>
                <tr>
                    <td>客户端类型</td>
                    <td>
                        <select id="ddlClienType" class="com_w40pen oper">                           
                        </select>
                    </td>
                    <td>客户端数量</td>
                    <td>
                        <input type="text" id="txtClientNum" class="oper" value="@Model.ConfigInfo.ClientNum">
                    </td>
                </tr>
                <tr>
                   <td colspan="4" class="com_TextCenter" id="OperArea">
                   </td>
               </tr>
            </table>
        </div>
    </body>
</html>
